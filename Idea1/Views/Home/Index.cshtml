@{
    ViewBag.Title = "Home Page";
    var topic = ViewBag.Topic;
    var ideas = ViewBag.Ideas;
    var department = ViewBag.Department;
}

<main>
    <section class="card" aria-labelledby="aspnetTitle">
        <h3 id="title" class="text-center"><i class="fa fa-check-square-o" aria-hidden="true"></i> List to Topic</h3>
        <hr />
        <table class="table">
            <tr>
                <th>
                    Topic Title
                </th>
                <th>
                    <i class="fa fa-calendar" aria-hidden="true"></i>

                    First Date
                </th>
                <th>
                    <i class="fa fa-calendar" aria-hidden="true"></i>

                    Last Date
                </th>
                <th></th>
            </tr>
            @foreach (var topics in Model.Topics)
            {


                <tr>
                    <td>
                        @topics.Title
                    </td>
                    <td>
                        <i class="fa fa-calendar" aria-hidden="true"></i>

                        @topics.FirstDate
                    </td>
                    <td>
                        <i class="fa fa-calendar" aria-hidden="true"></i>

                        @topics.LastDate
                    </td>
                </tr>
            }
        </table>
        <p class="btne"><a href="/Staff/Index" class="btn btn-info btn-md">View to page <i class="fa fa-reply" aria-hidden="true"></i></a></p>
    </section>
    <hr />
    <div class="g-grid">
        <section>
            <div class="card1">
                <h3 id="title" class="text-center">
                    <i class="fa fa-users" aria-hidden="true"></i>
                    List to Departments
                </h3>
                <hr />
                <table class="table">
                    <tr>
                        <th>
                            Name
                        </th>
                    </tr>
                    @foreach (var depart in Model.Departments)
                    {
                        <tr>
                            <td>
                                @depart.Name
                            </td>
                        </tr>
                    }
                </table>
                <p class="btne"><a href="/Staff/Index" class="btn btn-info btn-md">View to page <i class="fa fa-reply" aria-hidden="true"></i></a></p>

            </div>
        </section>    
        <section>
            <div class="card2">
                <h3 id="title" class="text-center">
                    <i class="fa fa-lightbulb-o" aria-hidden="true"></i>
                    List to Idea
                </h3>
                <hr />
                <table class="table">
                    <tr>
                        <th>
                            Title
                        </th>
                        <th>
                            Brief
                        </th>
                        <th>
                            <i class="fa fa-thumbs-o-up" aria-hidden="true"></i>
                            Like
                        </th>
                        <th>
                            <i class="fa fa-thumbs-o-down" aria-hidden="true"></i>
                            Dislike
                        </th>
                        <th></th>
                    </tr>
                    @foreach (var idea in Model.Ideas)
                    {


                        <tr>
                            <td>
                                @idea.Title
                            </td>
                            <td>

                                @idea.Brief
                            </td>
                            <td>

                                @idea.Like
                            </td>
                            <td>

                                @idea.Dislike
                            </td>
                        </tr>
                    }
                </table>
                <p class="btne"><a href="/Staff/Index" class="btn btn-info btn-md">View to page <i class="fa fa-reply" aria-hidden="true"></i></a></p>

            </div>
        </section>


    </div>
</main>




<style>
    .card {
        margin-top: 20px;
        margin-left:100px;
        display: table;
        flex-direction: column;
        width: 100%;
        max-width: 1000px;
        background-color: #FDF5E6;
        border-radius: 10px;
        box-shadow: 0 10px 20px 0 rgba(#999, .25);
        padding: .75rem;
    }
    .g-grid {
        display: grid;
        /* W(adjusted) = W(individual) - (1rem * 1/2) */
        grid-template-columns: calc(50% - (30px * 1/2)) calc(50% - (30px * 1/2));
        grid-column-gap: 30px;
    }
    .card2 {
        margin: 3rem auto;
        display: flex;
        flex-direction: column;
        width: 100%;
        max-width: 600px;
        background-color: #FDF5E6;
        border-radius: 10px;
        left:20px;
        box-shadow: 0 10px 20px 0 rgba(#999, .25);
        padding: .75rem;
    }

    .card1 {
        margin: 3rem auto;
        display: flex;
        flex-direction: column;
        width: 100%;
        max-width: 425px;
        background-color: #FDF5E6;
        border-radius: 10px;
        box-shadow: 0 10px 20px 0 rgba(#999, .25);
        padding: 1rem;
    }
    .btne {
        text-align:center
    }
</style>
@model IEnumerable<Idea1.Models.User>

@{
    ViewBag.Title = "List to User";
}
<div id="Background">
    <hr />
    <h2 class="text-lg-center">
        <i class="fa fa-users" aria-hidden="true"></i>
        List to User
    </h2>

    <hr />
    <p class=" text-center">
        <a id="create" class="btn btn-success" href="/Account/Register">Create User</a>
    </p>
    <table class="table text-center">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <a href="@Url.Action("Details", "User", new { id = item.UserId })">
                        <i class="fa fa-user-o" aria-hidden="true"></i>

                        @Html.DisplayFor(modelItem => item.Name)
                    </a>
                </td>
                <td>
                    <a class="btn btn-primary" href="@Url.Action("Edit", "User", new { id = item.UserId })"><i class="fa fa-pencil-square-o" aria-hidden="true"></i> Edit</a>
                    <a class="btn btn-secondary" href="@Url.Action("Details", "User", new { id = item.UserId })"><i class="fa fa-info" aria-hidden="true"></i> Details</a>
                    <a class="btn btn-danger" href="@Url.Action("Delete", "User", new { id = item.UserId })"><i class="fa fa-trash-o" aria-hidden="true"></i> Delete</a>
                </td>
            </tr>
        }

    </table>
</div>
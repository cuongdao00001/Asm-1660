@model Idea1.Models.Topic

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";

}
<hr />

<h1 class="text-center">Edit of Topics</h1>
<hr />

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
<div class="form">
    <div class="form-horizontal">
        <h4 class="text-center">Topic: @Model.Title</h4>
        <hr />
        <div class="row">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.TopicId)
            <div class="form-box">
                <div class="form-group">
                    @Html.LabelFor(model => model.Title, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label" for="FirstDate">First Date</label>
                    <input class="form-control" type="datetime-local" data-val="true" data-val-required="The FirstDate field is required." id="FirstDate" name="FirstDate" value="" />
                    <span class="text-danger field-validation-valid" data-valmsg-for="FirstDate" data-valmsg-replace="true"></span>
                </div>
                <div class="form-group">
                    <label class="control-label" for="LastDate">Last Date</label>
                    <input class="form-control" type="datetime-local" data-val="true" data-val-required="The LastDate field is required." id="LastDate" name="LastDate" value="" />
                    <span class="text-danger field-validation-valid" data-valmsg-for="LastDate" data-valmsg-replace="true"></span>
                </div>
                <hr />
                <div class="text-center">
                    <input type="submit" value="Save" class="btn btn-success" />

                    <button class="btn btn-danger" onclick="location.href='@Url.Action( "Index")'">Back to Topics</button>
                </div>
            </div>
        </div>
    </div>
</div>
}



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    @Styles.Render("~/Content/css")

}
<style>
    .form-horizontal {
        background: #FDEEE3;
        border-radius: 12px;
        padding: 10px;
        color: #3d155f;
    }
    .form {
        margin: 2rem auto;
        display: flex;
        flex-direction: column;
        width: 100%;
        max-width: 425px;
        background-color: #FDF5E6;
        border-radius: 10px;
        box-shadow: 0 10px 20px 0 rgba(#999, .25);
        padding: .75rem;
    }
    .text-center {
        color: #3d155f;
    }
</style>

@model Idea1.Models.Department

@{
    ViewBag.Title = "Delete";
}

<hr />

<h1 class="text-center">Delete to Department</h1>
<hr />

<div class="form">
    <div class="form-horizontal">
        <h3 class="text-center">Are you sure you want to delete this?</h3>
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <div class="form-actions no-color text-center">
                <input type="submit" value="Delete" class="btn btn-danger" />
            </div>
        }
        <hr />
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.Name)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Name)
            </dd>
            <dd class="text-center">
                <hr />

                <button class="btn btn-secondary" onclick="location.href='@Url.Action( "Index")'">Back to Department</button>
            </dd>
        </dl>

    </div>
</div>
<style>
    .form {
        margin: 2rem auto;
        display: flex;
        flex-direction: column;
        width: 100%;
        max-width: 425px;
        background-color: #FDF5E6;
        border-radius: 10px;
        box-shadow: 0 10px 20px 0 rgba(#999, .25);
        padding: .75rem;
    }
</style>
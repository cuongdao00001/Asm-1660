@model Idea1.Models.Role

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";

}

<hr />

<h1 class="text-center">Delete to Role</h1>
<hr />

<div class="form">
    <div class="form-horizontal">
        <h3 class="text-center">Are you sure you want to delete this?</h3>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.RoleName)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.RoleName)
            </dd>

        </dl>
        <hr />
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <div class="form-actions no-color text-center">
                <input type="submit" value="Delete" class="btn btn-danger" />
            </div>
        }
        <p></p>
        <p class="text-center">
            <button class="btn btn-secondary" onclick="location.href='@Url.Action( "Index")'">Back to Role</button>
        </p>
    </div>
</div>

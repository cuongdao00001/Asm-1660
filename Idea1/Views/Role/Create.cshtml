@model Idea1.Models.Role

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";

}

<hr />
<h1 class="text-center">Create to Role</h1>

<hr />

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
<div class="form">

    <div class="form-horizontal">
        <h4 class="text-center">New Role</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.RoleID, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.RoleID, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.RoleID, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group ">
            @Html.LabelFor(model => model.RoleName, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.RoleName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.RoleName, "", new { @class = "text-danger" })
            </div>
        </div>

        <hr />

        <div class="form-group text-center">
            <input type="submit" value="Create" class="btn btn-primary" />

            <button class="btn btn-danger" onclick="location.href='@Url.Action( "Index")'">Back to Role</button>

        </div>
    </div>
</div>
        }

<style>
    .form {
        margin: 2rem auto;
        display: flex;
        flex-direction: column;
        width: 100%;
        max-width: 425px;
        background-color: #FDF5E6;
        border-radius: 10px;
        box-shadow: 0 10px 20px 0 rgba(#999, .25);
        padding: .75rem;
    }
</style>

        @section Scripts {
            @Scripts.Render("~/bundles/jqueryval")
        }
